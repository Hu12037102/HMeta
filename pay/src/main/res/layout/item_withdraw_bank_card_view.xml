<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50dp"
    tools:background="@color/colorWindowBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_bank_icon"
        android:layout_width="@dimen/size_22dp"
        android:layout_height="@dimen/size_22dp"
        android:layout_marginStart="@dimen/size_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_comm_normal"
        android:layout_marginEnd="@dimen/size_8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_bank_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginEnd="@dimen/size_10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/civ_bank_icon"
        app:layout_constraintRight_toLeftOf="@id/aiv_check"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="中国y银行" />

</androidx.constraintlayout.widget.ConstraintLayout>