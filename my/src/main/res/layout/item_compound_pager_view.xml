<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_140dp"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/size_140dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_background"
        android:layout_width="@dimen/size_140dp"
        android:layout_height="@dimen/size_140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_16dp"
        tools:background="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/aiv_background"
        tools:text="安科技股份喀什疯狂拉升空间"
        android:layout_marginStart="@dimen/size_6dp"
        android:layout_marginEnd="@dimen/size_6dp"
        tools:textColor="@color/black"

        />


</androidx.constraintlayout.widget.ConstraintLayout>