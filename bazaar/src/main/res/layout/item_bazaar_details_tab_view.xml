<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/size_18dp"
    android:paddingEnd="@dimen/size_18dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_indicator"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="寄售" />

    <View
        android:id="@+id/view_indicator"
        android:layout_width="@dimen/size_12dp"
        android:layout_height="@dimen/size_2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atv_content"
        android:layout_marginTop="@dimen/size_4dp"
        android:background="@drawable/shape_click_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>