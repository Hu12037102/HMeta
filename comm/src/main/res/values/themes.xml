<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healer_meta" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">@color/colorWhite</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/colorFF191919</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.Hide.StatusBar" parent="Theme.Healer_meta">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SureClickButton" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:background">@drawable/shape_click_view</item>
    </style>

    <style name="InputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorFF9A9A9C</item>
        <item name="android:textSize">@dimen/size_12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_project_item_view</item>
        <item name="android:paddingStart">@dimen/size_12dp</item>
        <item name="android:paddingEnd">@dimen/size_12dp</item>
    </style>

    <!--    <style name="BaseDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">-->
    <style name="BaseDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <!-- <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowBackground">@color/color80000000</item>
        <item name="android:windowAnimationStyle">@style/BaseDialogAnimation</item>

    </style>

    <style name="BaseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_center</item>
        <item name="android:windowExitAnimation">@anim/anim_center_to_bottom</item>
    </style>
</resources>