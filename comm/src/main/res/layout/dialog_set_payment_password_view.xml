<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFF2E2E2E"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/size_14dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/untying_bank_card"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_password_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp"
            app:layout_constraintTop_toBottomOf="@id/atv_title"
            android:layout_marginTop="@dimen/size_26dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_1"
                android:layout_width="@dimen/size_44dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="@dimen/size_12dp"
                android:background="@drawable/shape_input_password_view"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/atv_2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_2"
                android:layout_width="@dimen/size_44dp"
                android:layout_height="@dimen/size_44dp"
                android:layout_marginEnd="@dimen/size_12dp"
                android:background="@drawable/shape_input_password_view"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp"
                app:layout_constraintLeft_toRightOf="@id/atv_1"
                app:layout_constraintRight_toLeftOf="@id/atv_3"
                app:layout_constraintTop_toTopOf="@id/atv_1"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_3"
                android:layout_width="@dimen/size_44dp"
                android:layout_height="@dimen/size_44dp"
                android:layout_marginEnd="@dimen/size_12dp"
                android:background="@drawable/shape_input_password_view"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp"
                app:layout_constraintLeft_toRightOf="@id/atv_2"
                app:layout_constraintRight_toLeftOf="@id/atv_4"
                app:layout_constraintTop_toTopOf="@id/atv_1"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_4"
                android:layout_width="@dimen/size_44dp"
                android:layout_height="@dimen/size_44dp"
                android:layout_marginEnd="@dimen/size_12dp"
                android:background="@drawable/shape_input_password_view"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp"
                app:layout_constraintLeft_toRightOf="@id/atv_3"
                app:layout_constraintRight_toLeftOf="@id/atv_5"
                app:layout_constraintTop_toTopOf="@id/atv_1"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_5"
                android:layout_width="@dimen/size_44dp"
                android:layout_height="@dimen/size_44dp"
                android:layout_marginEnd="@dimen/size_12dp"
                android:background="@drawable/shape_input_password_view"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp"
                app:layout_constraintLeft_toRightOf="@id/atv_4"
                app:layout_constraintRight_toLeftOf="@id/atv_6"
                app:layout_constraintTop_toTopOf="@id/atv_1"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_6"
                android:layout_width="@dimen/size_44dp"
                android:layout_height="@dimen/size_44dp"
                android:background="@drawable/shape_input_password_view"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp"
                app:layout_constraintLeft_toRightOf="@id/atv_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/atv_1"
                tools:text="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_text_size"
            android:layout_marginTop="@dimen/size_28dp"
            android:layout_marginEnd="@dimen/default_text_size"
            android:textColor="@color/colorFFF4CD9A"
            android:textSize="@dimen/default_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_password_content"
            tools:text="支付密码" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_soft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200dp"
            android:layout_marginTop="@dimen/size_30dp"
            app:layout_constraintTop_toBottomOf="@id/atv_desc" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>