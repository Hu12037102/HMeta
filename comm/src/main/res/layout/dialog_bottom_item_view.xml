<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/atv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:background="@color/colorFF2E2E2E"
        android:gravity="center"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_16dp"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_6dp"
        android:background="@color/colorFF363639"
        app:layout_constraintBottom_toTopOf="@id/atv_cancel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/colorFF2E2E2E"
        android:gravity="center"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintBottom_toTopOf="@id/line" />
</androidx.constraintlayout.widget.ConstraintLayout>